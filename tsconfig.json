{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": { "~/*": ["./*"] },

    "strict": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "isolatedModules": true
  },

  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules", ".svelte-kit", ".vscode"]
}
